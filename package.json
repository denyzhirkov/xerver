  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "hyperid": "^3.3.0",
