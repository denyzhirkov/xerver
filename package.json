{
  "name": "xerver",
  "version": "1.5.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "node --require ./tests/setup.js --test tests/cases/*.test.ts",
